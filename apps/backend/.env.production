# =============================================================================
# CONFIGURACIÓN DE PRODUCCIÓN - ECO IGLESIA LETRAS
# =============================================================================
# IMPORTANTE: Este archivo contiene configuraciones para producción
# Nunca commitear este archivo con valores reales al repositorio

# Entorno
ENVIRONMENT=production

# =============================================================================
# BASE DE DATOS POSTGRESQL - PRODUCCIÓN
# =============================================================================
DATABASE_URL=postgresql://eco:CHANGE_ME_PRODUCTION_PASSWORD@postgres:5432/eco_iglesia_letras
POSTGRES_DB=eco_iglesia_letras
POSTGRES_USER=eco
POSTGRES_PASSWORD=CHANGE_ME_PRODUCTION_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Configuraciones avanzadas de PostgreSQL
POSTGRES_MAX_CONNECTIONS=200
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_MAINTENANCE_WORK_MEM=64MB
POSTGRES_WAL_BUFFERS=16MB
POSTGRES_WORK_MEM=4MB

# =============================================================================
# REDIS - PRODUCCIÓN
# =============================================================================
REDIS_URL=redis://:eco-iglesia-redis-2024@redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=eco-iglesia-redis-2024
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# =============================================================================
# SEGURIDAD - PRODUCCIÓN
# =============================================================================
SECRET_KEY=CHANGE_ME_SUPER_SECRET_KEY_FOR_PRODUCTION_AT_LEAST_64_CHARS_LONG
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuración de CORS
ALLOWED_HOSTS=["eco-iglesia.com", "www.eco-iglesia.com", "api.eco-iglesia.com"]
CORS_ORIGINS=["https://eco-iglesia.com", "https://www.eco-iglesia.com"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Configuración HTTPS
HTTPS_ONLY=true
SECURE_COOKIES=true
HSTS_MAX_AGE=31536000

# =============================================================================
# EMAIL - PRODUCCIÓN
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@eco-iglesia.com
EMAIL_HOST_PASSWORD=CHANGE_ME_EMAIL_APP_PASSWORD
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
EMAIL_FROM_NAME=Eco Iglesia Letras
EMAIL_FROM_EMAIL=noreply@eco-iglesia.com

# Templates de email
EMAIL_TEMPLATE_DIR=app/templates/email
PASSWORD_RESET_URL=https://eco-iglesia.com/reset-password
EMAIL_VERIFICATION_URL=https://eco-iglesia.com/verify-email

# =============================================================================
# LOGGING - PRODUCCIÓN
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Logging específico
ACCESS_LOG=logs/access.log
ERROR_LOG=logs/error.log
SECURITY_LOG=logs/security.log

# =============================================================================
# PERFORMANCE Y CACHE - PRODUCCIÓN
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Compresión
GZIP_ENABLED=true
GZIP_MINIMUM_SIZE=1000

# =============================================================================
# MONITOREO Y SALUD - PRODUCCIÓN
# =============================================================================
HEALTH_CHECK_ENDPOINT=/api/health
METRICS_ENABLED=true
METRICS_ENDPOINT=/api/metrics

# Configuración de Sentry (opcional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# BACKUP Y RECUPERACIÓN - PRODUCCIÓN
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=eco-iglesia-backups
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY
AWS_REGION=us-east-1

# =============================================================================
# CONFIGURACIONES ESPECÍFICAS DE APLICACIÓN
# =============================================================================
APP_NAME=Eco Iglesia Letras
APP_VERSION=1.0.0
APP_DESCRIPTION=Plataforma de letras y acordes cristianos
APP_CONTACT_EMAIL=contacto@eco-iglesia.com
APP_SUPPORT_URL=https://eco-iglesia.com/soporte

# Configuración de la API
API_V1_STR=/api/v1
API_VERSION=1.0.0
API_TITLE=Eco Iglesia Letras API
API_DESCRIPTION=API para la gestión de letras y acordes cristianos

# Configuración de base de datos para migraciones
ALEMBIC_CONFIG=alembic.ini
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# =============================================================================
# CONFIGURACIONES DE SEGURIDAD ADICIONALES
# =============================================================================
# Configuración de JWT
JWT_SECRET_KEY=CHANGE_ME_JWT_SECRET_KEY_DIFFERENT_FROM_MAIN_SECRET
JWT_REFRESH_SECRET_KEY=CHANGE_ME_JWT_REFRESH_SECRET_KEY

# Configuración de encriptación
ENCRYPTION_KEY=CHANGE_ME_ENCRYPTION_KEY_32_BYTES_BASE64_ENCODED
PASSWORD_SALT_ROUNDS=12

# Configuración de sesiones
SESSION_SECRET_KEY=CHANGE_ME_SESSION_SECRET_KEY
SESSION_TIMEOUT=1800

# =============================================================================
# CONFIGURACIONES DE TERCEROS
# =============================================================================
# Google Analytics (opcional)
# GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Facebook App (opcional)
# FACEBOOK_APP_ID=your_facebook_app_id

# reCAPTCHA (opcional)
# RECAPTCHA_SITE_KEY=your_recaptcha_site_key
# RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# =============================================================================
# CONFIGURACIONES DE DESARROLLO EN PRODUCCIÓN
# =============================================================================
DEBUG=false
TESTING=false
RELOAD=false

# Configuración de documentación
DOCS_ENABLED=false
REDOC_ENABLED=false
OPENAPI_URL=

# Configuración de desarrollo
DEV_TOOLS_ENABLED=false
PROFILING_ENABLED=false
