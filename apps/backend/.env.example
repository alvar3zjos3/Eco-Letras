# =================================================================
# CONFIGURACIÓN DE ECO IGLESIA LETRAS API - EJEMPLO
# =================================================================
# 
# Copia este archivo como .env y ajusta los valores según tu entorno
# 

# =================================================================
# APLICACIÓN
# =================================================================
APP_NAME=Eco Iglesia Letras API
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# =================================================================
# BASE DE DATOS
# =================================================================
DATABASE_URL=postgresql://usuario:contraseña@localhost/nombre_base_datos
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# =================================================================
# SEGURIDAD Y AUTENTICACIÓN
# =================================================================
# Genera una clave secreta fuerte de al menos 32 caracteres
SECRET_KEY=tu-clave-secreta-muy-segura-aqui
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15
EMAIL_VERIFICATION_TOKEN_EXPIRE_HOURS=24

# =================================================================
# RATE LIMITING
# =================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =================================================================
# CORS Y HOSTS PERMITIDOS
# =================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# =================================================================
# EMAIL / SMTP
# =================================================================
EMAIL_ENABLED=true
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-contraseña-de-aplicacion
EMAIL_FROM=tu-email@gmail.com
EMAIL_FROM_NAME=Eco Iglesia Letras
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_SSL=false

# =================================================================
# FRONTEND
# =================================================================
FRONTEND_URL=http://localhost:3000
FRONTEND_RESET_PASSWORD_URL=http://localhost:3000/reset-password
FRONTEND_EMAIL_VERIFICATION_URL=http://localhost:3000/verify-email

# =================================================================
# LOGGING
# =================================================================
LOG_LEVEL=INFO
LOG_FILE=app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# =================================================================
# CACHE (Redis - opcional)
# =================================================================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# =================================================================
# MONITORING Y MÉTRICAS
# =================================================================
METRICS_ENABLED=true
HEALTH_CHECK_TIMEOUT=30

# =================================================================
# DESARROLLO Y TESTING
# =================================================================
TESTING=false
SEED_DATA=true
